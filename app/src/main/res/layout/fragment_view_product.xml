<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.admin.ViewProductFragment">

    <LinearLayout
        android:layout_width="339dp"
        android:layout_height="501dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="34dp"
        android:background="@drawable/borderstyle">

        <ImageButton
            android:id="@+id/productImageDF"
            android:layout_width="210dp"
            android:layout_height="118dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/productNameDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Título del producto"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="323dp"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_presentation_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presentación" />

            <EditText
                android:id="@+id/presentationProductDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="326dp"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_unit_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unidad" />

            <EditText
                android:id="@+id/view_unit_ET"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_medium_range_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rango medio" />

            <EditText
                android:id="@+id/middleRangeDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_low_range_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rango bajo" />

            <EditText
                android:id="@+id/lowRangeDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="332dp"
        android:layout_height="179dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="525dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deleteBtnDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:text="Eliminar" />

            <Button
                android:id="@+id/editBtnDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Editar" />
        </LinearLayout>

        <Button
            android:id="@+id/goBackBtnDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>