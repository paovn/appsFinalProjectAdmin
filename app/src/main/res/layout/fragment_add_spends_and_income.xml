<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.admin.AddProductFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/add_product_image_button2"
                android:layout_width="210dp"
                android:layout_height="118dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/borderstyle"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/add_register_name_ET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Nombre del gasto/ingreso"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp" />
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:background="@drawable/borderstyle"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/add_amount_ET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Cantidad"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:background="@drawable/borderstyle"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/add_amount_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="@string/monto"
                    android:paddingLeft="10dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/add_inconme_BTN"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonbackground"
                android:gravity="center"
                android:text="@string/agregar_como_ingreso"
                android:textColor="@color/white"
                app:backgroundTint="@color/browser_actions_divider_color"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/add_product_BTN"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonbackground"
                android:text="@string/agregar_como_costo"
                android:textColor="@color/white"
                app:backgroundTint="@color/browser_actions_divider_color"
                app:backgroundTintMode="add" />

        </LinearLayout>
</ScrollView>