<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.admin.ViewProductFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="340dp"
        android:layout_height="455dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/borderstyle"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/productImageDF"
            android:layout_width="210dp"
            android:layout_height="118dp"
            android:layout_gravity="center"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/productNameDF"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="@string/title_product"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_presentation_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:text="PresentaciÃ³n"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/presentationProductDF"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/borderstyle"
                android:ems="10"
                android:hint="#entero"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_medium_range_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Rango medio"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/middleRangeDF"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/borderstyle"
                android:ems="10"
                android:hint="#entero"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_low_range_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Rango bajo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/lowRangeDF"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="44dp"
                android:background="@drawable/borderstyle"
                android:ems="10"
                android:hint="#entero"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="162dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deleteBtnDF"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:background="@drawable/backgroundred"
                android:text="Eliminar"
                app:backgroundTint="@color/browser_actions_divider_color"
                app:backgroundTintMode="add" />

            <Button
                android:id="@+id/editBtnDF"
                android:layout_width="156dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/backgroundgreen"
                android:text="Editar"
                app:backgroundTint="@color/browser_actions_divider_color"
                app:backgroundTintMode="add" />
        </LinearLayout>

        <Button
            android:id="@+id/goBackBtnDF"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Volver"
            android:background="@drawable/buttonbackground"
            app:backgroundTint="@color/browser_actions_divider_color"
            app:backgroundTintMode="add" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>