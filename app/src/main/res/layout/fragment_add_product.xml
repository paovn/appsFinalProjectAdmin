<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.admin.AddProductFragment">

    <EditText
        android:id="@+id/add_product_title_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Título del producto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_product_image_button" />

    <TextView
        android:id="@+id/add_presentation_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presentación"
        app:layout_constraintBottom_toBottomOf="@+id/add_presentation_ET"
        app:layout_constraintEnd_toStartOf="@+id/add_presentation_ET"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_presentation_ET" />

    <EditText
        android:id="@+id/add_presentation_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_presentation_TV"
        app:layout_constraintTop_toBottomOf="@+id/add_product_title_ET" />

    <EditText
        android:id="@+id/add_medium_range_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/add_presentation_ET"
        app:layout_constraintStart_toStartOf="@+id/add_presentation_ET"
        app:layout_constraintTop_toBottomOf="@+id/add_presentation_ET" />

    <TextView
        android:id="@+id/add_medium_range_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rango medio"
        app:layout_constraintBottom_toBottomOf="@+id/add_medium_range_ET"
        app:layout_constraintEnd_toStartOf="@+id/add_medium_range_ET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_medium_range_ET" />

    <TextView
        android:id="@+id/add_low_range_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rango bajo"
        app:layout_constraintBottom_toBottomOf="@+id/add_low_range_ET"
        app:layout_constraintEnd_toStartOf="@+id/add_low_range_ET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_low_range_ET" />

    <EditText
        android:id="@+id/add_low_range_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/add_medium_range_ET"
        app:layout_constraintStart_toStartOf="@+id/add_medium_range_ET"
        app:layout_constraintTop_toBottomOf="@+id/add_medium_range_ET" />

    <Button
        android:id="@+id/add_product_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="Agregar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_low_range_ET" />

    <ImageButton
        android:id="@+id/add_product_image_button"
        android:layout_width="180dp"
        android:layout_height="162dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>